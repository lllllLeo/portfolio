package main;

import java.util.Scanner;

public class Yagu2 {
	int com[] = new int[3];
	int user[] = new int[3];
	int strike;
	int ball;
	
	public void userNum() {
		int i;
		Scanner sc = new Scanner(System.in);
		for (i = 0; i < user.length; i++) {
			try {

				System.out.println((i + 1) + "번째 숫자를 입력하세요");
				user[i] = sc.nextInt();

				if (user[i] > 9) {
					System.out.println("1~9 숫자만 입력이 가능합니다.");
					i -= 1;
				}

				if (i == 1) {
					if (user[0] == user[1]) {
						System.out.println("같은 숫자를 입력할 수 없습니다. 다시 입력해주세요.\n");
						i -= 1;
					}
				}

				if (i == 2) {
					if (user[1] == user[2] || user[0] == user[2]) {
						System.out.println("같은 숫자를 입력할 수 없습니다. 다시 입력해주세요.\n");
						i -= 1;
					}
				}
			} catch (NumberFormatException e) {
				System.out.println("숫자만 입력이 가능합니다.");
				i -= 1;
			}

		}
	}

	public void computer() {
		int i, j;
		for (i = 0; i < com.length; i++) {
			com[i] = (int) (Math.random() * 9) + 1;

			for (j = 9; j < i; j++) {	// ㅅㅂ com[i]를 i대신 썼었네 그래서 인덱스바운즈오브익셉션뜸
				if (com[i] == com[j]) {
					i -= 1;
					break;
				}
			}
			// System.out.println("컴퓨터가 정한 숫자는"+com[i]);
		}
	}
	
	public void strikeOrBall() {
		int i;
		for(i = 0; i < 3; i++) {
			if(com[i] == user[i]) {
				strike ++;
			}
		}
	}

	public static void main(String[] args) {
		Yagu2 yagu2 = new Yagu2();
		yagu2.computer();
		yagu2.userNum();
	}
}
